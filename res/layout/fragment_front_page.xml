<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".FrontPage$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LR Number*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lr_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LR Number"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origin"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Id*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/trip_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: TRIP-1"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Date*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/trip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip Date"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Number*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Number"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barcode"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Type"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Capacity(Units):"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vehicle_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Capacity"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Name"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Phone Number:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/driver_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 9822098220"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consignment Type*:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/consignment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Consignment Type"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight(kg):"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 3.22"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume(cc):"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 3.22"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Items:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/number_of_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challan Number:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/challan_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seal Number:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/seal_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.A Name:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ba_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"
            android:textColor="@color/purple_900_combination_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Reporting Time:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vehicle_reporting_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"
            android:textColor="@color/purple_900_combination_1" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create Consignment"
            android:textColor="@color/purple_900_combination_1" />
    </LinearLayout>

</ScrollView>