<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".FrontPage$PlaceholderFragment"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="LR Number*:"/>

        <EditText
            android:id="@+id/lr_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LR Number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Origin*:"/>

        <AutoCompleteTextView
            android:id="@+id/origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Destination*:"/>

        <AutoCompleteTextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Consignment Type*:"/>

        <AutoCompleteTextView
            android:id="@+id/consignment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Consignment Type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Vehicle Number*:"/>

        <AutoCompleteTextView
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Barcode*:"/>

        <AutoCompleteTextView
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barcode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Driver Name*:"/>

        <AutoCompleteTextView
            android:id="@+id/driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Driver Phone Number"/>

        <EditText
            android:id="@+id/driver_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 9822098220"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Vehicle Type"/>

        <EditText
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Vehicle Capacity(Units)"/>

        <EditText
            android:id="@+id/vehicle_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Capacity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Weight(kg)"/>

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 3.22"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Trip Id*:"/>

        <EditText
            android:id="@+id/trip_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: TRIP-1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Trip Date*:"/>

        <EditText
            android:id="@+id/trip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip Date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Volume(cc)"/>

        <EditText
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 3.22"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Number Of Items"/>

        <EditText
            android:id="@+id/number_of_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Challan Number"/>

        <EditText
            android:id="@+id/challan_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Seal Number"/>

        <EditText
            android:id="@+id/seal_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example: 10"/>
    </LinearLayout>

</ScrollView>
